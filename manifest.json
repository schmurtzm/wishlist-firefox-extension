{
  "manifest_version": 2,

  "name": "__MSG_extensionName__",
  "short_name": "Wishlist",
  "description": "__MSG_extensionDescription__",
  "version": "1.0.0",
  "author": "Wishlist Extension",
  "default_locale": "en",
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },

  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    },
    "default_popup": "popup.html",
    "default_title": "Add to Wishlist"
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["js/content.js"],
    "run_at": "document_end"
  }],

  "permissions": [
    "activeTab",
    "storage",
    "<all_urls>"
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "wishlist-quick-add@extension.local"
    }
  }
}
